{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Media",
  "description": "Images and copy",
  "type": "object",
  "properties": {
    "required": ["media"],
    "media": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "copy": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      }
    }
  }
}
